<%- layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3">Create A New Listing</h3>
    <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3 mt-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" id="title" required />
        <div class="valid-feedback">Title Looks Good!</div>
        <div class="invalid-feedback">Title should be valid</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" name="listing[image]" placeholder="Enter Image URL" class="form-control" id="image" required />
        <div class="valid-feedback">Image Looks Good!</div>
        <div class="invalid-feedback">Image should be valid</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" class="form-control" id="description" required></textarea>
        <div class="valid-feedback">Description Looks Good!</div>
        <div class="invalid-feedback">Description should be valid</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input type="text" name="listing[price]" placeholder="Enter Price" class="form-control" id="price" required />
          <div class="valid-feedback">Price Looks Good!</div>
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input type="text" name="listing[country]" placeholder="Enter Country" class="form-control" id="country" required />
          <div class="valid-feedback">Country name Looks Good!</div>
          <div class="invalid-feedback">Country Name should be valid</div>
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="location" class="form-label">Location</label>
          <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control" id="location" required />
          <div class="valid-feedback">Location Looks Good!</div>
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" class="form-select" id="category">
            <option value="Rooms">Rooms</option>
            <option value="Iconic Cities">Iconic Cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Castles">Castles</option>
            <option value="Amazing Pools">Amazing Pools</option>
            <option value="Camping">Camping</option>
            <option value="Farms">Farms</option>
            <option value="Artic">Artic</option>
            <option value="Domes">Domes</option>
            <option value="Ships">Ships</option>
          </select>
          <div class="valid-feedback">Category Looks Good!</div>
          <div class="invalid-feedback">Category should be valid</div>
        </div>
      </div>
      <button type="submit" class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
  </div>
</div>
