<%- layout("/layouts/boilerplate.ejs") %>

<div id="filters">
  <div class="filter-grp">
    <a class="filter" href="/listings?category=Rooms">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>
    <a class="filter" href="/listings?category=Iconic Cities">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </a>
    <a class="filter" href="/listings?category=Mountains">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </a>
    <a class="filter" href="/listings?category=Castles">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>castles</p>
    </a>
    <a class="filter" href="/listings?category=Amazing Pools">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>
    <a class="filter" href="/listings?category=Camping">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>
    <a class="filter" href="/listings?category=Farms">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </a>
    <a class="filter" href="/listings?category=Artic">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Artic</p>
    </a>
    <a class="filter" href="/listings?category=Domes">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </a>
    <a class="filter" href="/listings?category=Ships">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Ships</p>
    </a>
  </div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (const listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem" />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
